{
  "hosting": {
    "public": "dist/where-to-go",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "postdeploy": "./messageSlack.sh 'Just deployed to Firebase Hosting'"
  },
  "functions": {
    "postdeploy": "./messageSlack.sh 'Just deployed to Firebase Functions'"
  }
}
