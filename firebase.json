{
  "hosting": {
    "public": "dist/where-to-go",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "postdeploy": "./messageSlack.sh 'Hosting successfully deployed' "
  },
  "functions": {
    "postdeploy": "./messageSlack.sh 'Cloud functions successfully deployed' "
  }
}
